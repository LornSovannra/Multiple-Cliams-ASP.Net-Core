@model Multi_Claims.ViewModels.UserClaimsVM
@{
    ViewData["Title"] = "Manage";
}

<form method="POST" asp-controller="Administration" asp-action="ManageUser" asp-route-userId="@Model.UserId">
    <div class="card">
        <div class="card-header">
            <h2>Manage User</h2>
        </div>
        <div class="card-body">
            @for(int i = 0; i < Model.Cliams.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Cliams[i].ClaimType" />
                    <input asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for='@Model.Cliams[i].IsSelected'>
                        @Model.Cliams[i].ClaimType
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Grant" class="btn btn-primary" style="width: auto;" />
            <a asp-controller="Administration" asp-action="Index" class="btn btn-primary" style="width: auto;">Cancel</a>
        </div>
    </div>
</form>