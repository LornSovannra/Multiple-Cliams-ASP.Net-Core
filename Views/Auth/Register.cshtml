@model Multi_Claims.ViewModels.RegisterUserVM
@{
    ViewData["Title"] = "Register Page";
}

<div style="margin: 20px auto; justify-content: center; align-items: center;">
    <form style="max-width: 600px; margin: 20px auto; justify-content: center; align-items: center;" method="POST" asp-controller="Auth" asp-action="Register">
        <div class="card">
          <div class="card-header" style="text-align: center;">
            <span style="font-size: 20; font-weight: bold;">Register</span>
          </div>
          <div asp-validation-summary="All"></div>
          <div class="card-body">
                <div class="mb-3 row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                        <input required class="form-control" asp-for="Username" />
                    </div>
                     <span asp-validation-for="Username" class="text-danger mt-1"></span>
                </div>

                <div class="mb-3 row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input required class="form-control" asp-for="Email" />
                    </div>
                     <span asp-validation-for="Email" class="text-danger mt-1"></span>
                </div>

                <div class="mb-3 row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input required class="form-control" asp-for="Password" />
                    </div>
                     <span asp-validation-for="Password" class="text-danger mt-1"></span>
                </div>

                <div class="mb-3 row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Confirm Password</label>
                    <div class="col-sm-10">
                        <input required class="form-control" asp-for="ConfirmPassword" />
                    </div>
                     <span asp-validation-for="ConfirmPassword" class="text-danger mt-1"></span>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">Register</button>
          </div>
        </div>
    </form>
</div>